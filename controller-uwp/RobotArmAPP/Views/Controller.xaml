                VerticalAlignment="Top"
                RadiusX="5"
                RadiusY="5"
                Stroke="Black" />
            <Rectangle
                Grid.Row="1"
                Width="370"
                Height="180"
                Margin="0,35,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                RadiusX="5"
                RadiusY="5"
                Stroke="Black" />
