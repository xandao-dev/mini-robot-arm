                Content="Add New Frame After Selected"
                Foreground="White"
                Style="{StaticResource ButtonStyle1}" />
            <Button
                x:Name="OverwriteFrame"
                Grid.RowSpan="2"
                Height="33"
                Margin="50,90,50,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                BorderBrush="#FFF7CC01"
                Click="OverwriteFrame_Click"
                Content="Overwrite Selected Frame"
                Foreground="White"
                Style="{StaticResource ButtonStyle1}" />
            <Button
                x:Name="DeleteFrame"
                Height="33"
                Margin="50,130,50,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                BorderBrush="#FFF7CC01"
