                Content="Delete Selected Frame"
                Foreground="White"
                Style="{StaticResource ButtonStyle1}" />
            <Button
                x:Name="PlayTop"
                Grid.Row="1"
                Height="33"
                Margin="50,45,50,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                BorderBrush="#FFF7CC01"
                Click="PlayTop_Click"
                Content="Play from Top"
                Foreground="White"
                Style="{StaticResource ButtonStyle1}" />
            <Button
                x:Name="PlaySelected"
                Grid.Row="1"
                Height="33"
                Margin="50,85,50,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                BorderBrush="#FFF7CC01"
                Click="PlaySelected_Click"
                Content="Play from Selected (Resume)"
                Foreground="White"
                Style="{StaticResource ButtonStyle1}" />
            <TextBox
                x:Name="FrameSpeedBox"
                Height="33"
                Margin="205,175,50,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Background="#CCFFFFFF"
                BorderBrush="#FFF7CC01"
                InputScope="Digits"
                IsEnabled="True"
                KeyDown="FrameSpeedBox_KeyDown"
                KeyUp="FrameSpeedBox_KeyUp"
                LostFocus="FrameSpeedBox_LostFocus"
                SelectionHighlightColor="#FFF7CC01"
                SelectionHighlightColorWhenNotFocused="{x:Null}"
                Style="{StaticResource TextBoxStyle1}"
                Text="100" />
            <TextBlock
                Margin="50,180,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Foreground="White"
                Text="Frame Speed (0-100%):"
                TextWrapping="Wrap" />
            <Border
                Width="112"
                Height="20"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FFF7F7F7"
                BorderBrush="Black"
                BorderThickness="1,1,1,1"
                CornerRadius="5,5,5,5">
                <TextBlock
                    Margin="7,0,0,0"
                    FontFamily="Arial Black"
                    Text="Frame Control"
                    TextWrapping="Wrap" />
            </Border>
            <Border
                Grid.Row="1"
                Width="127"
                Height="20"
                Margin="0,5,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FFF7F7F7"
                BorderBrush="Black"
                BorderThickness="1,1,1,1"
                CornerRadius="5,5,5,5">
                <TextBlock
                    Margin="7,0,0,0"
                    FontFamily="Arial Black"
                    Text="Playback Control"
                    TextWrapping="Wrap" />
            </Border>
            <TextBlock
                Grid.Row="1"
                Margin="50,175,0,0"
                HorizontalAlignment="Left"
