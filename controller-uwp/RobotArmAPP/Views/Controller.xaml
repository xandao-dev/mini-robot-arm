        </Grid.Background>
        <Grid
            Width="400"
            Height="500"
            Margin="440,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF4F4E4E"
            BorderBrush="Black"
            BorderThickness="2,2,2,2"
            CornerRadius="10,10,10,10">
